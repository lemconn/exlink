{
	"info": {
		"_postman_id": "exlink-okx-account",
		"name": "ExLink - OKX Account",
		"description": "Account management APIs for OKX exchange. Requires API key authentication. Use sign-okx.js script for automatic signature generation.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Account Balance",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/account/balance",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"account",
						"balance"
					]
				}
			}
		},
		{
			"name": "Get Positions",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/account/positions?instType=SWAP",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"account",
						"positions"
					],
					"query": [
						{
							"key": "instType",
							"value": "SWAP",
							"description": "SPOT, SWAP, FUTURES, OPTION"
						}
					]
				}
			}
		}
	]
}