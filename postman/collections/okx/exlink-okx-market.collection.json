{
	"info": {
		"_postman_id": "exlink-okx-market",
		"name": "ExLink - OKX Market Data",
		"description": "Public market data APIs for OKX exchange. No authentication required.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Instruments",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/public/instruments?instType=SPOT",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"public",
						"instruments"
					],
					"query": [
						{
							"key": "instType",
							"value": "SPOT",
							"description": "SPOT, SWAP, FUTURES, OPTION"
						}
					]
				}
			}
		},
		{
			"name": "Get Ticker",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/market/ticker?instId=BTC-USDT",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"market",
						"ticker"
					],
					"query": [
						{
							"key": "instId",
							"value": "BTC-USDT"
						}
					]
				}
			}
		},
		{
			"name": "Get Candles",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/market/candles?instId=BTC-USDT&bar=1H&limit=100",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"market",
						"candles"
					],
					"query": [
						{
							"key": "instId",
							"value": "BTC-USDT"
						},
						{
							"key": "bar",
							"value": "1H",
							"description": "1m, 3m, 5m, 15m, 30m, 1H, 2H, 4H, 6H, 12H, 1D, 1W, 1M, 3M, 6M, 1Y"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			}
		},
		{
			"name": "Get Recent Trades",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/market/trades?instId=BTC-USDT&limit=100",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"market",
						"trades"
					],
					"query": [
						{
							"key": "instId",
							"value": "BTC-USDT"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			}
		}
	]
}