{
	"info": {
		"_postman_id": "exlink-okx-trade",
		"name": "ExLink - OKX Trading",
		"description": "Private trading APIs for OKX exchange. Requires API key authentication. Use sign-okx.js script for automatic signature generation.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Order",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"instId\": \"BTC-USDT\",\n    \"tdMode\": \"cash\",\n    \"side\": \"buy\",\n    \"ordType\": \"market\",\n    \"sz\": \"0.001\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{okx_base_url}}/api/v5/trade/order",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"trade",
						"order"
					]
				}
			}
		},
		{
			"name": "Query Order",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/trade/order?instId=BTC-USDT&ordId=",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"trade",
						"order"
					],
					"query": [
						{
							"key": "instId",
							"value": "BTC-USDT"
						},
						{
							"key": "ordId",
							"value": "",
							"description": "Order ID"
						}
					]
				}
			}
		},
		{
			"name": "Get Pending Orders",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{okx_base_url}}/api/v5/trade/orders-pending?instType=SPOT",
					"host": [
						"{{okx_base_url}}"
					],
					"path": [
						"api",
						"v5",
						"trade",
						"orders-pending"
					],
					"query": [
						{
							"key": "instType",
							"value": "SPOT",
							"description": "SPOT, SWAP, FUTURES, OPTION"
						}
					]
				}
			}
		}
	]
}