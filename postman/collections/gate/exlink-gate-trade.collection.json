{
	"info": {
		"_postman_id": "exlink-gate-trade",
		"name": "ExLink - Gate Trading",
		"description": "Private trading APIs for Gate exchange. Requires API key authentication. Use sign-gate.js script for automatic signature generation.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Order",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"currency_pair\": \"BTC_USDT\",\n    \"side\": \"buy\",\n    \"amount\": \"0.001\",\n    \"type\": \"market\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{gate_base_url}}/api/v4/spot/orders",
					"host": [
						"{{gate_base_url}}"
					],
					"path": [
						"api",
						"v4",
						"spot",
						"orders"
					]
				}
			}
		},
		{
			"name": "Query Order",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{gate_base_url}}/api/v4/spot/orders/:order_id",
					"host": [
						"{{gate_base_url}}"
					],
					"path": [
						"api",
						"v4",
						"spot",
						"orders",
						":order_id"
					],
					"variable": [
						{
							"key": "order_id",
							"value": "",
							"description": "Order ID"
						}
					]
				}
			}
		},
		{
			"name": "Get Open Orders",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{gate_base_url}}/api/v4/spot/open_orders?currency_pair=BTC_USDT",
					"host": [
						"{{gate_base_url}}"
					],
					"path": [
						"api",
						"v4",
						"spot",
						"open_orders"
					],
					"query": [
						{
							"key": "currency_pair",
							"value": "BTC_USDT"
						}
					]
				}
			}
		}
	]
}