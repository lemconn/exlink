{
	"info": {
		"_postman_id": "exlink-gate-market",
		"name": "ExLink - Gate Market Data",
		"description": "Public market data APIs for Gate exchange. No authentication required.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Currency Pairs",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{gate_base_url}}/api/v4/spot/currency_pairs",
					"host": [
						"{{gate_base_url}}"
					],
					"path": [
						"api",
						"v4",
						"spot",
						"currency_pairs"
					]
				}
			}
		},
		{
			"name": "Get Tickers",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{gate_base_url}}/api/v4/spot/tickers?currency_pair=BTC_USDT",
					"host": [
						"{{gate_base_url}}"
					],
					"path": [
						"api",
						"v4",
						"spot",
						"tickers"
					],
					"query": [
						{
							"key": "currency_pair",
							"value": "BTC_USDT"
						}
					]
				}
			}
		},
		{
			"name": "Get Candlesticks",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{gate_base_url}}/api/v4/spot/candlesticks?currency_pair=BTC_USDT&interval=1h&limit=100",
					"host": [
						"{{gate_base_url}}"
					],
					"path": [
						"api",
						"v4",
						"spot",
						"candlesticks"
					],
					"query": [
						{
							"key": "currency_pair",
							"value": "BTC_USDT"
						},
						{
							"key": "interval",
							"value": "1h",
							"description": "10s, 1m, 5m, 15m, 30m, 1h, 4h, 8h, 1d, 7d"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			}
		}
	]
}