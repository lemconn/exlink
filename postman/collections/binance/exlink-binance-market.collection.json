{
	"info": {
		"_postman_id": "exlink-binance-market",
		"name": "ExLink - Binance Market Data",
		"description": "Public market data APIs for Binance exchange. No authentication required.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get Exchange Info",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{binance_base_url}}/api/v3/exchangeInfo",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"exchangeInfo"
					]
				},
				"description": "Get all trading pairs information"
			}
		},
		{
			"name": "Get 24hr Ticker",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{binance_base_url}}/api/v3/ticker/24hr?symbol=BTCUSDT",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"ticker",
						"24hr"
					],
					"query": [
						{
							"key": "symbol",
							"value": "BTCUSDT",
							"description": "Trading pair symbol"
						}
					]
				}
			}
		},
		{
			"name": "Get Klines",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{binance_base_url}}/api/v3/klines?symbol=BTCUSDT&interval=1h&limit=100",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"klines"
					],
					"query": [
						{
							"key": "symbol",
							"value": "BTCUSDT"
						},
						{
							"key": "interval",
							"value": "1h",
							"description": "1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 6h, 8h, 12h, 1d, 3d, 1w, 1M"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			}
		},
		{
			"name": "Get Recent Trades",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{binance_base_url}}/api/v3/trades?symbol=BTCUSDT&limit=100",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"trades"
					],
					"query": [
						{
							"key": "symbol",
							"value": "BTCUSDT"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			}
		}
	]
}