{
	"info": {
		"_postman_id": "exlink-binance-trade",
		"name": "ExLink - Binance Trading",
		"description": "Private trading APIs for Binance exchange. Requires API key authentication. Use sign-binance.js script for automatic signature generation.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Order",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"symbol\": \"BTCUSDT\",\n    \"side\": \"BUY\",\n    \"type\": \"MARKET\",\n    \"quantity\": \"0.001\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{binance_base_url}}/api/v3/order",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"order"
					]
				}
			}
		},
		{
			"name": "Query Order",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{binance_base_url}}/api/v3/order?symbol=BTCUSDT&orderId=",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"order"
					],
					"query": [
						{
							"key": "symbol",
							"value": "BTCUSDT"
						},
						{
							"key": "orderId",
							"value": "",
							"description": "Order ID"
						}
					]
				}
			}
		},
		{
			"name": "Get Open Orders",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{binance_base_url}}/api/v3/openOrders?symbol=BTCUSDT",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"openOrders"
					],
					"query": [
						{
							"key": "symbol",
							"value": "BTCUSDT",
							"description": "Optional, leave empty to query all trading pairs"
						}
					]
				}
			}
		},
		{
			"name": "Get My Trades",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{binance_base_url}}/api/v3/myTrades?symbol=BTCUSDT&limit=100",
					"host": [
						"{{binance_base_url}}"
					],
					"path": [
						"api",
						"v3",
						"myTrades"
					],
					"query": [
						{
							"key": "symbol",
							"value": "BTCUSDT"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				}
			}
		}
	]
}